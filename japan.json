{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 570,
    "height": 470,
    "data": {
    "url": "https://raw.githubusercontent.com/syuu1208/asgn2/main/japan.topojson",
    "format": {"type": "topojson", "feature": "japan"}
    },
    "params":[
        {
            "name": "above",
            "value": 82,
            "bind": {
            "input": "range",
            "min": 82,
            "max": 85,
            "step": 0.1,
            "name": "Minimum Life Expectancy: "
            }
        }
           
    ],
    "transform": [
    {
    "lookup": "properties.nam",
    "from": {
    "data": {
    "url": "https://raw.githubusercontent.com/syuu1208/asgn2/main/life_expectancy_prefecture.csv"
    },
    "key": "Country",
    "fields": ["Overall"]
            }
        },
        {"filter": "datum.Overall > above"}  
    ],
    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
    "field": "Overall",
    "type": "quantitative",
    "scale": {"type": "linear"}
    },
    "tooltip": [
    {"field": "properties.nam", "type": "nominal", "title": "Country"},
    {"field": "Overall", "type": "quantitative"}
    ]
    }
   }
